<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="root" stylesheets="@/styles/login.css" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.lpn3.licitamatch.view.RegistroController">
   <children>
      <VBox alignment="CENTER" layoutX="175.0" layoutY="35.0" prefHeight="430.0" prefWidth="350.0" spacing="15.0" styleClass="form-container" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="175.0" AnchorPane.rightAnchor="175.0" AnchorPane.topAnchor="35.0">
         <children>
            <Text styleClass="header-text" text="Crie Sua Conta">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="sub-header-text" text="É rápido e fácil." />
            
            <VBox alignment="CENTER" prefWidth="100.0" spacing="15.0">
               <children>
                  <TextField fx:id="usernameField" maxWidth="250.0" prefHeight="40.0" promptText="Nome completo" styleClass="input-field" />
                  <TextField fx:id="emailField maxWidth" maxWidth="250.0" prefHeight="40.0" promptText="Email" styleClass="input-field" />
                  <PasswordField fx:id="passwordField" maxWidth="250.0" prefHeight="40.0" promptText="Senha (mín. 8 caracteres)" styleClass="input-field" />
                  <PasswordField fx:id="confirmPasswordField" maxWidth="250.0" prefHeight="40.0" promptText="Confirmar Senha" styleClass="input-field" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
            
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefHeight="40.0" prefWidth="250.0" styleClass="login-button" text="REGISTRAR">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            
            <Hyperlink fx:id="goToLoginLink" onAction="#goToLogin" text="Já tem uma conta? Faça o login" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>