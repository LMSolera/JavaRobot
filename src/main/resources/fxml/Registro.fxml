<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lpn3.licitamatch.view.RegistroController">

   <left>
      <AnchorPane prefHeight="500.0" prefWidth="331.0" styleClass="left-pane" BorderPane.alignment="CENTER">
         <children>
<!--            <FontAwesomeIconView glyphName="USER_PLUS" layoutX="133.0" layoutY="131.0" size="70" styleClass="icon-envelope" />-->
            <Text layoutX="41.0" layoutY="195.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Crie sua conta para usar o sistema" textAlignment="CENTER" wrappingWidth="268.8">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </left>

   <right>
      <AnchorPane prefHeight="500.0" prefWidth="363.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Campo Usuário -->
<!--            <Fo<ntAwesomeIconView glyphName="USER" layoutX="83.0" layoutY="170.0" size="20" styleClass="icon-user" />-->
            <TextField fx:id="usernameField" layoutX="116.0" layoutY="148.0" prefHeight="25.0" prefWidth="155.0" promptText="Nome de usuário" styleClass="input-field" />

            <!-- Campo E-mail -->
<!--            <FontAwesomeIconView glyphName="ENVELOPE" layoutX="83.0" layoutY="215.0" size="20" styleClass="icon-user" />-->
            <TextField fx:id="emailField" layoutX="116.0" layoutY="195.0" prefHeight="25.0" prefWidth="155.0" promptText="E-mail" styleClass="input-field" />

            <!-- Campo Senha -->
<!--            <FontAwesomeIconView glyphName="KEY" layoutX="83.0" layoutY="265.0" size="20" styleClass="icon-key" />-->
            <PasswordField fx:id="passwordField" layoutX="116.0" layoutY="243.0" prefHeight="25.0" prefWidth="155.0" promptText="Senha" styleClass="input-field" />

            <!-- Campo Confirmar Senha -->
<!--            <FontAwesomeIconView glyphName="KEY" layoutX="83.0" layoutY="312.0" size="20" styleClass="icon-key" />-->
            <PasswordField fx:id="confirmPasswordField" layoutX="116.0" layoutY="291.0" prefHeight="25.0" prefWidth="155.0" promptText="Confirmar Senha" styleClass="input-field" />

            <!-- Botão Registrar -->
            <Button fx:id="registerButton" layoutX="140.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleRegister" prefHeight="31.0" prefWidth="85.0" styleClass="login-button" text="Registrar">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>

            <!-- Link para Login -->
            <Hyperlink fx:id="goToLoginLink" layoutX="121.0" layoutY="440.0" onAction="#goToLoginLink" text="Já tem conta? Login" />

            <!-- Título -->
<!--            <FontAwesomeIconView glyphName="USERS" layoutX="164.0" layoutY="82.0" size="35" styleClass="icon-users" />-->
            <Text fill="#008e9d" layoutX="116.0" layoutY="125.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Registrar-se" wrappingWidth="134.0">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
