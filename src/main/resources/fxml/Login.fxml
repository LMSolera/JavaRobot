<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@login.css">

   <left>
      <AnchorPane prefHeight="500.0" prefWidth="350.0"
                  styleClass="left-pane" BorderPane.alignment="CENTER">
         <children>
            <FontAwesomeIconView glyphName="ENVELOPE" layoutX="133.0" layoutY="131.0" size="70"
                                 wrappingWidth="13.3" styleClass="icon-envelope"/>
            <TextField layoutX="36.0" layoutY="143.0" prefHeight="64.0" prefWidth="265.0"
                       text="Sistema Comparativo de licitações e propostas"/>
         </children>
      </AnchorPane>
   </left>

   <right>
      <AnchorPane prefHeight="500.0" prefWidth="536.0" BorderPane.alignment="CENTER">
         <children>
            <PasswordField layoutX="116.0" layoutY="181.0" prefHeight="25.0" prefWidth="155.0"
                           promptText="User name" styleClass="input-field"/>
            <TextField layoutX="116.0" layoutY="242.0" prefHeight="25.0" prefWidth="152.0"
                       promptText="Password" styleClass="input-field"/>
            <FontAwesomeIconView glyphName="USER" layoutX="83.0" layoutY="204.0" size="20"
                                 styleClass="icon-user"/>
            <FontAwesomeIconView glyphName="KEY" layoutX="82.0" layoutY="265.0" size="20"
                                 styleClass="icon-key"/>
            <Button layoutX="140.0" layoutY="342.0" mnemonicParsing="false"
                    prefHeight="31.0" prefWidth="85.0" text="Login"
                    styleClass="login-button">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </Button>
            <Hyperlink layoutX="121.0" layoutY="440.0" text="Esqueceu a senha?"/>
            <FontAwesomeIconView glyphName="USERS" layoutX="155.0" layoutY="87.0" size="35"
                                 styleClass="icon-users"/>
            <Text fill="#008e9d" layoutX="157.0" layoutY="135.0" strokeType="OUTSIDE"
                  strokeWidth="0.0" text="Login">
               <font>
                  <Font size="15.0"/>
               </font>
            </Text>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
